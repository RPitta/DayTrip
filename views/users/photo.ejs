<% layout('layouts/boilerplate')%>
    <%- include('../partials/navbar') %>
        <%- include('../partials/flash') %>

            <div class="bg-[#1f2937] h-screen">
                <div class="container flex flex-wrap justify-center items-center mx-auto pt-32 mb-24">
                    <form action="users/photo" method="POST" class="text-white shadow-2xl p-16 rounded-lg "
                        enctype="multipart/form-data">
                        <div class="text-3xl text-center mb-9 font-semibold">
                            Upload an Image
                        </div>
                        <div class="mb-6 w-72">
                            <input
                                class="block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400"
                                aria-describedby="user_avatar_help" id="user_avatar" name="avatar" type="file" required>
                        </div>


                        <div class="container flex flex-wrap justify-center items-center mx-auto">
                            <button type="submit"
                                class="transition ease-in-out text-white justify-between bg-red-800 hover:bg-red-900 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 object-bottom">Upload
                            </button>
                        </div>
                    </form>
                </div>
            </div>